{% comment %}
  Text Content Section for Jewelry Store
  
  Displays rich text content with enhanced typography and spacing.
  Perfect for storytelling, brand information, or promotional content.
{% endcomment %}

{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign heading = section.settings.heading
  assign content = section.settings.content
  assign text_alignment = section.settings.text_alignment
  assign background_color = section.settings.background_color
  assign text_color = section.settings.text_color
%}

<section id="{{ section_id }}" class="text-content section" style="background-color: {{ background_color }}; color: {{ text_color }};">
  <div class="page-width">
    <div class="text-content__container text-content__container--{{ text_alignment }}">
      {% if heading != blank %}
        <div class="text-content__header scroll-reveal">
          <h2 class="section-heading">{{ heading }}</h2>
        </div>
      {% endif %}
      
      {% if content != blank %}
        <div class="text-content__body scroll-reveal">
          <div class="text-content__rich-text">
            {{ content }}
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <div class="text-content__footer scroll-reveal">
          <a href="{{ section.settings.button_url }}" class="btn btn--primary">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .text-content {
    position: relative;
  }
  
  .text-content__container {
    max-width: 800px;
  }
  
  .text-content__container--center {
    margin: 0 auto;
    text-align: center;
  }
  
  .text-content__container--left {
    margin: 0;
    text-align: left;
  }
  
  .text-content__container--right {
    margin: 0 0 0 auto;
    text-align: right;
  }
  
  .text-content__header {
    margin-bottom: var(--spacing-2xl);
  }
  
  .text-content__body {
    margin-bottom: var(--spacing-2xl);
  }
  
  .text-content__rich-text {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.8;
    color: inherit;
  }
  
  .text-content__rich-text p {
    margin-bottom: var(--spacing-lg);
  }
  
  .text-content__rich-text p:last-child {
    margin-bottom: 0;
  }
  
  .text-content__rich-text h3 {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 600;
    margin: var(--spacing-2xl) 0 var(--spacing-lg) 0;
    line-height: 1.3;
  }
  
  .text-content__rich-text h3:first-child {
    margin-top: 0;
  }
  
  .text-content__rich-text ul,
  .text-content__rich-text ol {
    margin: var(--spacing-lg) 0;
    padding-left: var(--spacing-xl);
  }
  
  .text-content__rich-text li {
    margin-bottom: var(--spacing-sm);
  }
  
  .text-content__footer {
    text-align: center;
  }
  
  .text-content__container--left .text-content__footer {
    text-align: left;
  }
  
  .text-content__container--right .text-content__footer {
    text-align: right;
  }
  
  /* Mobile styles */
  @media (max-width: 767px) {
    .text-content__container {
      max-width: 100%;
    }
    
    .text-content__rich-text {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% render 'scroll-animations' %}

{% schema %}
{
  "name": "Text content",
  "tag": "section",
  "class": "text-content-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Share your brand story, values, or any important information with your customers. This section supports rich text formatting including bold, italic, links, and lists.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1F2937"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom section ID"
    }
  ],
  "presets": [
    {
      "name": "Text content",
      "settings": {
        "heading": "Our Story",
        "content": "<p>Share your brand story, values, or any important information with your customers. This section supports rich text formatting including bold, italic, links, and lists.</p>",
        "text_alignment": "center"
      }
    }
  ]
}
{% endschema %}
