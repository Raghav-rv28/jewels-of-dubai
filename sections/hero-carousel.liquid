{% stylesheet %}
  /* CSS Custom Properties */
  :root {
    --hero-aspect-ratio: 16/9;
    --hero-mobile-aspect-ratio: 9/16;
    --header-height: 80px;
    --header-mobile-height: 60px;
    --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-fast: all 0.2s ease;
  }

  /* Reset any default margins/padding that might affect fullscreen */
  body:has(.hero-carousel--fullscreen) {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  /* Integrated Header Styles */
  .hero-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: transparent;
    transition: var(--transition-smooth);
  }

  .hero-header.hero-header--solid {
    position: fixed;
    background: var(--header-bg-color, #000000);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  /* Override header-nav styles for hero header */
  .hero-header .header-nav {
    background: transparent;
  }

  .hero-header .header-nav__container {
    max-width: 100%;
  }


  /* Hero Carousel Styles */
  .hero-carousel {
    position: relative;
    width: 100%;
    aspect-ratio: var(--hero-aspect-ratio);
    min-height: 100vh;
    overflow: hidden;
    margin-top: var(--header-height);
  }

  /* Fullscreen Hero Carousel */
  .hero-carousel--fullscreen {
    position: relative;
    width: 100vw;
    height: 100vh;
    min-height: 100vh;
    max-height: 100vh;
    margin: 0;
    padding: 0;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    aspect-ratio: auto;
  }

  .hero-carousel__container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-carousel__slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-carousel__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }

  .hero-carousel__slide.active {
    opacity: 1;
  }

  /* Video Background */
  .hero-carousel__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #000;
  }

  .hero-carousel__video-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .hero-carousel__video-element.loaded {
    opacity: 1;
  }

  .hero-carousel__video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 1;
    pointer-events: none;
  }

  .hero-carousel__video-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .hero-carousel__video-loading .spinner {
    width: 50px;
    height: 50px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  .hero-carousel__video.loaded .hero-carousel__video-loading {
    display: none;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .hero-carousel__placeholder-text {
    color: white;
    font-size: 1.125rem;
    text-align: center;
    padding: 2rem;
  }

  /* Image Background */
  .hero-carousel__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-carousel__image-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-carousel__image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 1;
  }

  /* Placeholder */
  .hero-carousel__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
    position: relative;
  }

  .hero-carousel__placeholder-svg {
    width: 200px;
    height: 200px;
    opacity: 0.3;
    color: white;
  }

  .hero-carousel__placeholder-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 1;
  }

  /* Content Overlay */
  .hero-carousel__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 2;
    padding: 2rem;
  }

  .hero-carousel__content--left {
    justify-content: flex-start;
  }

  .hero-carousel__content--center {
    justify-content: center;
  }

  .hero-carousel__content--right {
    justify-content: flex-end;
  }

  .hero-carousel__text {
    max-width: 600px;
    color: white;
    text-align: left;
  }

  .hero-carousel__content--center .hero-carousel__text {
    text-align: center;
  }

  .hero-carousel__content--right .hero-carousel__text {
    text-align: right;
  }

  .hero-carousel__heading {
    font-family: var(--font-heading, 'Helvetica Neue', sans-serif);
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 300;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin: 0 0 1.5rem 0;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .hero-carousel__subheading {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    line-height: 1.6;
    font-weight: 400;
    margin: 0 0 2rem 0;
    opacity: 0.95;
    text-shadow: 0 1px 5px rgba(0, 0, 0, 0.3);
  }

  .hero-carousel__button {
    display: inline-block;
    padding: 1rem 2rem;
    background: transparent;
    border: 2px solid white;
    color: white;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: var(--transition-smooth);
    position: relative;
    overflow: hidden;
  }

  .hero-carousel__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: white;
    transition: var(--transition-smooth);
    z-index: -1;
  }

  .hero-carousel__button:hover {
    color: #000;
  }

  .hero-carousel__button:hover::before {
    left: 0;
  }

  /* Navigation Dots */
  .hero-carousel__dots {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    z-index: 3;
  }

  .hero-carousel__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.6);
    background-color: transparent;
    cursor: pointer;
    transition: var(--transition-fast);
  }

  .hero-carousel__dot.active,
  .hero-carousel__dot:hover {
    background-color: white;
    border-color: white;
  }

  /* Navigation Arrows */
  .hero-carousel__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-smooth);
    z-index: 3;
    backdrop-filter: blur(10px);
  }

  .hero-carousel__arrow:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%) scale(1.1);
  }

  .hero-carousel__arrow--prev {
    left: 2rem;
  }

  .hero-carousel__arrow--next {
    right: 2rem;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    :root {
      --header-height: var(--header-mobile-height);
    }

    .hero-carousel {
      aspect-ratio: var(--hero-mobile-aspect-ratio);
      margin-top: var(--header-mobile-height);
    }

    .hero-carousel--fullscreen {
      width: 100vw;
      height: 100vh;
      min-height: 100vh;
      max-height: 100vh;
      margin: 0;
      aspect-ratio: auto;
    }

    .hero-carousel__content {
      padding: 1rem;
    }

    .hero-carousel__text {
      max-width: 100%;
    }

    .hero-carousel__heading {
      font-size: clamp(2rem, 8vw, 3rem);
      margin-bottom: 1rem;
    }

    .hero-carousel__subheading {
      font-size: clamp(1rem, 4vw, 1.25rem);
      margin-bottom: 1.5rem;
    }

    .hero-carousel__button {
      padding: 0.875rem 1.5rem;
      font-size: 0.8rem;
    }

    .hero-carousel__dots {
      bottom: 1rem;
      right: 1rem;
      flex-direction: row;
    }

    .hero-carousel__arrow {
      width: 40px;
      height: 40px;
    }

    .hero-carousel__arrow--prev {
      left: 1rem;
    }

    .hero-carousel__arrow--next {
      right: 1rem;
    }
  }

  /* Tablet Styles */
  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-carousel {
      aspect-ratio: 4/3;
    }

    .hero-carousel--fullscreen {
      width: 100vw;
      height: 100vh;
      aspect-ratio: auto;
    }

    .hero-header__nav-links {
      gap: 1.5rem;
    }

    .hero-header__link {
      font-size: 0.8rem;
    }
  }

  /* Large Desktop Styles */
  @media (min-width: 1440px) {
    .hero-carousel {
      aspect-ratio: 21/9;
    }

    .hero-carousel--fullscreen {
      width: 100vw;
      height: 100vh;
      aspect-ratio: auto;
    }

    .hero-header__container {
      padding: 0 4rem;
    }

    .hero-carousel__content {
      padding: 4rem;
    }

    .hero-carousel__text {
      max-width: 800px;
    }
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('.hero-carousel');
    const header = document.querySelector('.hero-header');
    if (!carousel || !header) return;
    
    const slides = carousel.querySelectorAll('[data-carousel-slide]');
    const dots = carousel.querySelectorAll('[data-carousel-dot]');
    const prevButton = carousel.querySelector('[data-carousel-prev]');
    const nextButton = carousel.querySelector('[data-carousel-next]');
    const autoplay = carousel.dataset.autoplay === 'true';
    const delay = parseInt(carousel.dataset.delay) || 5000;
    const headerBgColor = header.dataset.headerBg || '#000000';
    
    let currentSlide = 0;
    let autoplayInterval;
    let isCarouselInView = false;
    
    // Video management
    const videos = carousel.querySelectorAll('.hero-carousel__video-element');
    
    function showSlide(index) {
      // Hide all slides
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      
      // Pause all videos
      videos.forEach(video => {
        video.pause();
      });
      
      // Show current slide
      slides[index].classList.add('active');
      if (dots[index]) {
        dots[index].classList.add('active');
      }
      
      // Play current video if it exists
      const currentVideo = slides[index].querySelector('.hero-carousel__video-element');
      if (currentVideo) {
        currentVideo.play().catch(e => console.log('Video autoplay prevented:', e));
      }
      
      currentSlide = index;
    }
    
    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }
    
    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }
    
    function startAutoplay() {
      if (autoplay && slides.length > 1) {
        autoplayInterval = setInterval(nextSlide, delay);
      }
    }
    
    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
      }
    }
    
    // Intersection Observer for viewport detection
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        isCarouselInView = entry.isIntersecting;
        
        if (isCarouselInView) {
          // Carousel is in viewport - make header transparent
          header.classList.remove('hero-header--solid');
          header.style.background = 'transparent';
          header.style.backdropFilter = 'blur(0px)';
          header.style.boxShadow = 'none';
          
          // Start autoplay if enabled
          startAutoplay();
        } else {
          // Carousel is not in viewport - make header solid
          header.classList.add('hero-header--solid');
          header.style.background = headerBgColor;
          header.style.backdropFilter = 'blur(10px)';
          header.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
          
          // Pause autoplay when not in view
          stopAutoplay();
        }
      });
    }, observerOptions);
    
    observer.observe(carousel);
    
    // Video loading and error handling
    videos.forEach(video => {
      const container = video.closest('[data-video-container]');
      const slide = video.closest('.hero-carousel__slide');
      
      // Set video properties
      video.muted = true;
      video.playsInline = true;
      video.setAttribute('playsinline', '');
      
      // Handle successful load
      video.addEventListener('loadeddata', () => {
        console.log('Video loaded successfully');
        video.classList.add('loaded');
        if (container) {
          container.classList.add('loaded');
        }
      });
      
      video.addEventListener('canplay', () => {
        console.log('Video can play');
        video.classList.add('loaded');
        if (container) {
          container.classList.add('loaded');
        }
      });
      
      // Handle errors
      video.addEventListener('error', (e) => {
        console.error('Video failed to load:', e);
        console.error('Video error code:', video.error ? video.error.code : 'unknown');
        console.error('Video src:', video.currentSrc);
        
        // Remove loading spinner
        if (container) {
          container.classList.add('loaded');
        }
        
        // Try to fallback to image
        const imageDiv = slide.querySelector('.hero-carousel__image');
        if (imageDiv) {
          video.parentElement.style.display = 'none';
          imageDiv.style.display = 'block';
        } else {
          // Show placeholder if no image
          const videoDiv = video.parentElement;
          videoDiv.innerHTML = '<div class="hero-carousel__placeholder"><div class="hero-carousel__placeholder-text">Video failed to load</div></div>';
        }
      });
      
      // Force load attempt
      video.load();
    });
    
    // Event listeners
    if (nextButton) {
      nextButton.addEventListener('click', () => {
        nextSlide();
        stopAutoplay();
        if (isCarouselInView) {
          startAutoplay();
        }
      });
    }
    
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        prevSlide();
        stopAutoplay();
        if (isCarouselInView) {
          startAutoplay();
        }
      });
    }
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopAutoplay();
        if (isCarouselInView) {
          startAutoplay();
        }
      });
    });
    
    // Pause autoplay on hover
    carousel.addEventListener('mouseenter', stopAutoplay);
    carousel.addEventListener('mouseleave', () => {
      if (isCarouselInView) {
        startAutoplay();
      }
    });
    
    // Handle visibility change (tab switching)
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        stopAutoplay();
        videos.forEach(video => video.pause());
      } else if (isCarouselInView) {
        startAutoplay();
        const currentVideo = slides[currentSlide].querySelector('.hero-carousel__video-element');
        if (currentVideo) {
          currentVideo.play().catch(e => console.log('Video autoplay prevented:', e));
        }
      }
    });
    
    // Handle window resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        // Recalculate video dimensions on resize
        videos.forEach(video => {
          video.style.width = '100%';
          video.style.height = '100%';
        });
      }, 250);
    });
    
    // Initialize
    showSlide(0);
    
    // Set initial header state
    if (isCarouselInView) {
      header.style.background = 'transparent';
    } else {
      header.classList.add('hero-header--solid');
      header.style.background = headerBgColor;
    }
  });
{% endjavascript %}

