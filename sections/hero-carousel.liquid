{% comment %}
  Hero Carousel Section with Video Support and Integrated Header
  
  Features:
  - Video background support with responsive aspect ratios
  - Integrated header that extends video background when carousel is in viewport
  - Smooth transitions and modern design
  - Mobile-first responsive design
{% endcomment %}

{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign autoplay_delay = section.settings.autoplay_delay | times: 1000
  assign header_bg_color = section.settings.header_bg_color | default: '#000000'
%}

<!-- Integrated Header -->
<header class="hero-header" id="hero-header" data-header-bg="{{ header_bg_color }}">
  {% render 'header-nav', transparent: true, menu: section.settings.menu, modifier_class: 'hero-header__nav' %}
</header>

<!-- Hero Carousel Section -->
<section id="{{ section_id }}" class="hero-carousel hero-carousel--fullscreen" data-autoplay="{{ section.settings.enable_autoplay }}" data-delay="{{ autoplay_delay }}" data-section-id="{{ section.id }}">
  <div class="hero-carousel__container">
    <div class="hero-carousel__slides" data-carousel-slides>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'slide' %}
            <div class="hero-carousel__slide" data-carousel-slide="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              <!-- Video Background -->
              {% liquid
                assign video_source = ''
                assign needs_cors = false
                
                if block.settings.video_url != blank
                  assign video_source = block.settings.video_url
                  assign needs_cors = true
                elsif block.settings.video
                  assign video_source = block.settings.video | file_url
                elsif block.settings.asset_video != blank
                  assign video_source = block.settings.asset_video | asset_url
                endif
              %}
              
              {% if video_source != blank %}
                <div class="hero-carousel__video" data-video-container>
                  <video 
                    class="hero-carousel__video-element"
                    autoplay 
                    muted 
                    loop 
                    playsinline
                    preload="auto"
                    {% if needs_cors %}crossorigin="anonymous"{% endif %}
                    data-video-src="{{ video_source }}"
                  >
                    {%- comment -%}theme-check-disable RemoteAsset{%- endcomment -%}
                    <source src="{{ video_source }}" type="video/mp4">
                    {%- comment -%}theme-check-enable RemoteAsset{%- endcomment -%}
                    Your browser does not support the video tag.
                  </video>
                  <div class="hero-carousel__video-overlay"></div>
                  <div class="hero-carousel__video-loading">
                    <div class="spinner"></div>
                  </div>
                </div>
              {% elsif block.settings.image %}
                <div class="hero-carousel__image">
                  {% render 'image',
                    image: block.settings.image,
                    width: 1920,
                    height: 1080,
                    crop: 'center',
                    class: 'hero-carousel__image-element'
                  %}
                  <div class="hero-carousel__image-overlay"></div>
                </div>
              {% else %}
                <div class="hero-carousel__placeholder">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-carousel__placeholder-svg' }}
                  <div class="hero-carousel__placeholder-overlay"></div>
                </div>
              {% endif %}
              
              <!-- Content Overlay -->
              <div class="hero-carousel__content hero-carousel__content--{{ block.settings.text_alignment }}">
                <div class="page-width">
                  <div class="hero-carousel__text">
                    {% if block.settings.heading != blank %}
                      <h1 class="hero-carousel__heading">
                        {{ block.settings.heading | escape }}
                      </h1>
                    {% endif %}
                    
                    {% if block.settings.subheading != blank %}
                      <p class="hero-carousel__subheading">
                        {{ block.settings.subheading | escape }}
                      </p>
                    {% endif %}
                    
                    {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                      <a href="{{ block.settings.button_url }}" class="hero-carousel__button">
                        {{ block.settings.button_text | escape }}
                      </a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    <!-- Navigation Dots -->
    {% if section.blocks.size > 1 %}
      <div class="hero-carousel__dots" data-carousel-dots>
        {% for block in section.blocks %}
          <button class="hero-carousel__dot" 
                  data-carousel-dot="{{ forloop.index0 }}"
                  aria-label="Go to slide {{ forloop.index }}">
          </button>
        {% endfor %}
      </div>
    {% endif %}
    
    <!-- Navigation Arrows -->
    {% if section.blocks.size > 1 %}
      <button class="hero-carousel__arrow hero-carousel__arrow--prev" 
              data-carousel-prev
              aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <button class="hero-carousel__arrow hero-carousel__arrow--next" 
              data-carousel-next
              aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  </div>
</section>

