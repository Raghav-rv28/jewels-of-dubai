{% comment %}
  Hero Carousel Section for Jewelry Store
  
  Displays a rotating carousel of hero images with text overlays and call-to-action buttons.
  Perfect for showcasing featured jewelry collections or promotions.
{% endcomment %}

{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign autoplay_delay = section.settings.autoplay_delay | times: 1000
%}

<section id="{{ section_id }}" class="hero-carousel" data-autoplay="{{ section.settings.enable_autoplay }}" data-delay="{{ autoplay_delay }}">
  <div class="hero-carousel__container">
    <div class="hero-carousel__slides" data-carousel-slides>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'slide' %}
            <div class="hero-carousel__slide" data-carousel-slide="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              <div class="hero-carousel__image">
                {% if block.settings.image %}
                  {% render 'image',
                    image: block.settings.image,
                    width: 1920,
                    height: 800,
                    crop: 'center',
                    class: 'hero-carousel__image-element'
                  %}
                {% else %}
                  <div class="hero-carousel__placeholder">
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-carousel__placeholder-svg' }}
                  </div>
                {% endif %}
              </div>
              
              <div class="hero-carousel__content hero-carousel__content--{{ block.settings.text_alignment }}">
                <div class="page-width">
                  <div class="hero-carousel__text">
                    {% if block.settings.heading != blank %}
                      <h1 class="hero-carousel__heading">
                        {{ block.settings.heading | escape }}
                      </h1>
                    {% endif %}
                    
                    {% if block.settings.subheading != blank %}
                      <p class="hero-carousel__subheading">
                        {{ block.settings.subheading | escape }}
                      </p>
                    {% endif %}
                    
                    {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                      <a href="{{ block.settings.button_url }}" class="btn btn--primary hero-carousel__button">
                        {{ block.settings.button_text | escape }}
                      </a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    <!-- Navigation Dots -->
    {% if section.blocks.size > 1 %}
      <div class="hero-carousel__dots" data-carousel-dots>
        {% for block in section.blocks %}
          <button class="hero-carousel__dot" 
                  data-carousel-dot="{{ forloop.index0 }}"
                  aria-label="Go to slide {{ forloop.index }}">
          </button>
        {% endfor %}
      </div>
    {% endif %}
    
    <!-- Navigation Arrows -->
    {% if section.blocks.size > 1 %}
      <button class="hero-carousel__arrow hero-carousel__arrow--prev" 
              data-carousel-prev
              aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <button class="hero-carousel__arrow hero-carousel__arrow--next" 
              data-carousel-next
              aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .hero-carousel {
    position: relative;
    height: 70vh;
    min-height: 500px;
    max-height: 800px;
    overflow: hidden;
  }
  
  .hero-carousel__container {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .hero-carousel__slides {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .hero-carousel__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }
  
  .hero-carousel__slide.active {
    opacity: 1;
  }
  
  .hero-carousel__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .hero-carousel__image-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-carousel__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  }
  
  .hero-carousel__placeholder-svg {
    width: 200px;
    height: 200px;
    opacity: 0.3;
    color: white;
  }
  
  .hero-carousel__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 2;
  }
  
  .hero-carousel__content--left {
    justify-content: flex-start;
  }
  
  .hero-carousel__content--center {
    justify-content: center;
  }
  
  .hero-carousel__content--right {
    justify-content: flex-end;
  }
  
  .hero-carousel__text {
    max-width: 600px;
    padding: var(--spacing-xl);
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
  }
  
  .hero-carousel__heading {
    font-family: var(--font-heading);
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin: 0 0 var(--spacing-md) 0;
    line-height: 1.1;
  }
  
  .hero-carousel__subheading {
    font-size: 1.25rem;
    color: var(--color-foreground);
    margin: 0 0 var(--spacing-lg) 0;
    line-height: 1.5;
    opacity: 0.8;
  }
  
  .hero-carousel__button {
    font-size: 1.125rem;
    padding: var(--spacing-md) var(--spacing-xl);
  }
  
  .hero-carousel__dots {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: var(--spacing-sm);
    z-index: 3;
  }
  
  .hero-carousel__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid white;
    background-color: transparent;
    cursor: pointer;
    transition: var(--transition-fast);
  }
  
  .hero-carousel__dot.active,
  .hero-carousel__dot:hover {
    background-color: white;
  }
  
  .hero-carousel__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    color: var(--color-foreground);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-fast);
    z-index: 3;
  }
  
  .hero-carousel__arrow:hover {
    background-color: white;
    transform: translateY(-50%) scale(1.1);
  }
  
  .hero-carousel__arrow--prev {
    left: var(--spacing-lg);
  }
  
  .hero-carousel__arrow--next {
    right: var(--spacing-lg);
  }
  
  /* Mobile styles */
  @media (max-width: 767px) {
    .hero-carousel {
      height: 60vh;
      min-height: 400px;
    }
    
    .hero-carousel__heading {
      font-size: 2rem;
    }
    
    .hero-carousel__subheading {
      font-size: 1rem;
    }
    
    .hero-carousel__text {
      padding: var(--spacing-lg);
      margin: var(--spacing-md);
    }
    
    .hero-carousel__arrow {
      width: 40px;
      height: 40px;
    }
    
    .hero-carousel__arrow--prev {
      left: var(--spacing-sm);
    }
    
    .hero-carousel__arrow--next {
      right: var(--spacing-sm);
    }
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('.hero-carousel');
    if (!carousel) return;
    
    const slides = carousel.querySelectorAll('[data-carousel-slide]');
    const dots = carousel.querySelectorAll('[data-carousel-dot]');
    const prevButton = carousel.querySelector('[data-carousel-prev]');
    const nextButton = carousel.querySelector('[data-carousel-next]');
    const autoplay = carousel.dataset.autoplay === 'true';
    const delay = parseInt(carousel.dataset.delay) || 5000;
    
    let currentSlide = 0;
    let autoplayInterval;
    
    function showSlide(index) {
      // Hide all slides
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      
      // Show current slide
      slides[index].classList.add('active');
      if (dots[index]) {
        dots[index].classList.add('active');
      }
      
      currentSlide = index;
    }
    
    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }
    
    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }
    
    function startAutoplay() {
      if (autoplay && slides.length > 1) {
        autoplayInterval = setInterval(nextSlide, delay);
      }
    }
    
    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
      }
    }
    
    // Event listeners
    if (nextButton) {
      nextButton.addEventListener('click', () => {
        nextSlide();
        stopAutoplay();
        startAutoplay();
      });
    }
    
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        prevSlide();
        stopAutoplay();
        startAutoplay();
      });
    }
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopAutoplay();
        startAutoplay();
      });
    });
    
    // Pause autoplay on hover
    carousel.addEventListener('mouseenter', stopAutoplay);
    carousel.addEventListener('mouseleave', startAutoplay);
    
    // Initialize
    showSlide(0);
    startAutoplay();
  });
{% endjavascript %}

{% schema %}
{
  "name": "Hero carousel",
  "tag": "section",
  "class": "hero-carousel-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "label": "Autoplay delay (seconds)",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom section ID"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Luxury jewelry collection"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Discover our exquisite collection of handcrafted jewelry"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero carousel",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "heading": "Luxury jewelry collection",
            "subheading": "Discover our exquisite collection of handcrafted jewelry",
            "button_text": "Shop now",
            "text_alignment": "center"
          }
        },
        {
          "type": "slide",
          "settings": {
            "heading": "New arrivals",
            "subheading": "Be the first to see our latest jewelry pieces",
            "button_text": "View collection",
            "text_alignment": "center"
          }
        }
