{% render 'css-variables' %}

<header class="header" role="banner">
  <div class="page-width">
    {% render 'header-nav', transparent: false, menu: section.settings.menu %}
  </div>
</header>

{% render 'header-nav-styles' %}

{% stylesheet %}
  .header {
    background-color: var(--color-background);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: var(--z-sticky, 100);
  }

  .header .header-nav {
    color: var(--color-foreground);
  }

  .header .header-nav__container {
    padding: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
