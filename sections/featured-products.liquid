{% comment %}
  Featured Products Section for Jewelry Store
  
  Displays a grid of featured products with customizable layout options.
  Perfect for showcasing bestsellers or new arrivals on the homepage.
{% endcomment %}

{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign heading = section.settings.heading | default: 'sections.featured_products.title' | t
  assign subheading = section.settings.subheading | default: 'sections.featured_products.subtitle' | t
  assign products_to_show = section.settings.products_to_show | default: 8
  assign columns_desktop = section.settings.columns_desktop | default: 4
  assign columns_mobile = section.settings.columns_mobile | default: 2
  assign collection = collections[section.settings.collection]
%}

<section id="{{ section_id }}" class="featured-products" style="--columns-desktop: {{ columns_desktop }}; --columns-mobile: {{ columns_mobile }};">
  <div class="page-width">
    {% if heading != blank or subheading != blank %}
      <div class="featured-products__header">
        {% if heading != blank %}
          <h2 class="featured-products__heading">{{ heading }}</h2>
        {% endif %}
        
        {% if subheading != blank %}
          <p class="featured-products__subheading">{{ subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="featured-products__grid">
      {% if collection and collection.products.size > 0 %}
        {% for product in collection.products limit: products_to_show %}
          <div class="featured-products__item">
            {% render 'product-card',
              product: product,
              show_vendor: section.settings.show_vendor,
              show_quick_add: section.settings.show_quick_add,
              show_badges: section.settings.show_badges
            %}
          </div>
        {% endfor %}
      {% else %}
        <!-- Fallback content when no collection is selected or no products available -->
        {% for i in (1..products_to_show) %}
          <div class="featured-products__item">
            <div class="product-card">
              <div class="product-card__image">
                <div class="product-card__placeholder">
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder-svg' }}
                </div>
                <div class="product-card__badges">
                  <span class="product-card__badge product-card__badge--new">New</span>
                </div>
                <div class="product-card__quick-add">
                  <button class="btn btn--primary btn--small product-card__quick-add-button">
                    Quick add
                  </button>
                </div>
              </div>
              <div class="product-card__content">
                <h3 class="product-card__title">
                  <a href="#" class="product-card__title-link">
                    Sample Jewelry Product {{ i }}
                  </a>
                </h3>
                <div class="product-card__price">
                  <div class="price">
                    <div class="price__container">
                      <div class="price__regular">
                        <span class="price__amount">${{ i | times: 99 | plus: 50 }}</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
    
    {% if section.settings.show_view_all and collection and collection.products.size > products_to_show %}
      <div class="featured-products__footer">
        <a href="{{ collection.url }}" class="btn btn--outline">
          {{ 'collections.view_all' | t }}
        </a>
      </div>
    {% elsif section.settings.show_view_all %}
      <div class="featured-products__footer">
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--outline">
          {{ 'collections.view_all' | t }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .featured-products {
    padding: var(--spacing-2xl) 0;
    background-color: #fafafa;
  }
  
  .featured-products__header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }
  
  .featured-products__heading {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin: 0 0 var(--spacing-md) 0;
  }
  
  .featured-products__subheading {
    font-size: 1.125rem;
    color: var(--color-foreground);
    opacity: 0.8;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-desktop, 4), 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }
  
  .featured-products__item {
    width: 100%;
  }
  
  .featured-products__footer {
    text-align: center;
  }
  
  /* Mobile styles */
  @media (max-width: 767px) {
    .featured-products {
      padding: var(--spacing-xl) 0;
    }
    
    .featured-products__grid {
      grid-template-columns: repeat(var(--columns-mobile, 2), 1fr);
      gap: var(--spacing-md);
    }
    
    .featured-products__heading {
      font-size: 2rem;
    }
    
    .featured-products__subheading {
      font-size: 1rem;
    }
  }
  
  /* Tablet styles */
  @media (min-width: 768px) and (max-width: 1023px) {
    .featured-products__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured products"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Handpicked pieces from our collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show product badges",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom section ID"
    }
  ],
  "presets": [
    {
      "name": "Featured products"
    }
  ]
}
{% endschema %}
