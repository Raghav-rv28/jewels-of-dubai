{% comment %}
  Testimonials Section with Carousel
  
  Displays customer testimonials in an elegant card-based layout with carousel functionality.
  Perfect for building trust and showcasing customer experiences.
{% endcomment %}

{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign columns_desktop = section.settings.columns_desktop
  assign enable_carousel = section.settings.enable_carousel
  assign autoplay = section.settings.autoplay
  assign autoplay_delay = section.settings.autoplay_delay | times: 1000
%}

<section 
  id="{{ section_id }}" 
  class="testimonials section"
  style="
    --columns-desktop: {{ columns_desktop }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="page-width">
    {% if heading != blank or subheading != blank %}
      <div class="testimonials__header scroll-reveal">
        {% if heading != blank %}
          <h2 class="section-heading">{{ heading }}</h2>
        {% endif %}
        
        {% if subheading != blank %}
          <p class="section-subheading">{{ subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div 
      class="testimonials__wrapper{% if enable_carousel %} testimonials__wrapper--carousel{% endif %}"
      data-testimonials-carousel
      data-autoplay="{{ autoplay }}"
      data-delay="{{ autoplay_delay }}"
    >
      <div class="testimonials__grid" data-testimonials-track>
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'testimonial' %}
              <div 
                class="testimonials__item scroll-reveal scroll-reveal--scale" 
                data-testimonial-slide
                style="--animation-delay: {{ forloop.index0 | times: 0.1 }}s;"
                {{ block.shopify_attributes }}
              >
                {% render 'testimonial-card',
                  quote: block.settings.quote,
                  customer_name: block.settings.customer_name,
                  customer_location: block.settings.customer_location,
                  rating: block.settings.rating,
                  customer_image: block.settings.customer_image,
                  card_class: ''
                %}
              </div>
          {% endcase %}
        {% else %}
          <!-- Placeholder testimonials -->
          {% assign placeholder_quotes = "Absolutely stunning jewelry! The quality and craftsmanship are exceptional. I receive compliments every time I wear my pieces.|The attention to detail is remarkable. Each piece feels unique and special. Highly recommend!|Beautiful designs and excellent customer service. I'm so happy with my purchase!" | split: "|" %}
          {% assign placeholder_names = "Sarah Johnson|Michael Chen|Emma Williams" | split: "|" %}
          
          {% for i in (1..3) %}
            {% assign index = forloop.index0 %}
            <div class="testimonials__item scroll-reveal scroll-reveal--scale">
              {% render 'testimonial-card',
                quote: placeholder_quotes[index],
                customer_name: placeholder_names[index],
                customer_location: '',
                rating: 5,
                customer_image: '',
                card_class: ''
              %}
            </div>
          {% endfor %}
        {% endfor %}
      </div>
      
      {% if enable_carousel and section.blocks.size > columns_desktop %}
        <div class="testimonials__controls">
          <button 
            class="testimonials__arrow testimonials__arrow--prev" 
            data-carousel-prev
            aria-label="Previous testimonials"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          
          <div class="testimonials__dots" data-carousel-dots></div>
          
          <button 
            class="testimonials__arrow testimonials__arrow--next" 
            data-carousel-next
            aria-label="Next testimonials"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .testimonials {
    padding-top: var(--section-padding-top, 80px);
    padding-bottom: var(--section-padding-bottom, 80px);
    background-color: #FAFAFA;
  }
  
  .testimonials__header {
    margin-bottom: var(--spacing-3xl);
    text-align: center;
  }
  
  .testimonials__wrapper {
    position: relative;
  }
  
  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-desktop, 3), 1fr);
    gap: var(--spacing-xl);
  }
  
  /* Carousel mode */
  .testimonials__wrapper--carousel {
    overflow: hidden;
  }
  
  .testimonials__wrapper--carousel .testimonials__grid {
    display: flex;
    flex-wrap: nowrap;
    gap: 3rem;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .testimonials__wrapper--carousel .testimonials__item {
    flex: 0 0 calc((100% - (3rem * (var(--columns-desktop, 3) - 1))) / var(--columns-desktop, 3));
    min-width: 0;
    max-width: calc((100% - (3rem * (var(--columns-desktop, 3) - 1))) / var(--columns-desktop, 3));
  }
  
  .testimonials__item {
    width: 100%;
    transition-delay: var(--animation-delay, 0s);
  }
  
  .testimonials__controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-3xl);
  }
  
  .testimonials__arrow {
    width: 48px;
    height: 48px;
    border: 2px solid var(--color-primary, #D4AF37);
    border-radius: 50%;
    background-color: #FFFFFF;
    color: var(--color-primary, #D4AF37);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-normal);
    flex-shrink: 0;
  }
  
  .testimonials__arrow:hover {
    background-color: var(--color-primary, #D4AF37);
    color: #FFFFFF;
    transform: scale(1.1);
  }
  
  .testimonials__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }
  
  .testimonials__dots {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }
  
  .testimonials__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid var(--color-primary, #D4AF37);
    background-color: transparent;
    cursor: pointer;
    transition: var(--transition-fast);
  }
  
  .testimonials__dot.active,
  .testimonials__dot:hover {
    background-color: var(--color-primary, #D4AF37);
  }
  
  /* Tablet Styles */
  @media (min-width: 768px) and (max-width: 1024px) {
    .testimonials__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .testimonials__wrapper--carousel .testimonials__item {
      flex: 0 0 calc((100% - 3rem) / 2);
      max-width: calc((100% - 3rem) / 2);
    }
  }
  
  /* Mobile Styles */
  @media (max-width: 767px) {
    .testimonials {
      padding-top: var(--section-padding-mobile, 40px);
      padding-bottom: var(--section-padding-mobile, 40px);
    }
    
    .testimonials__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .testimonials__wrapper--carousel .testimonials__item {
      flex: 0 0 100%;
      max-width: 100%;
    }
    
    .testimonials__wrapper--carousel .testimonials__grid {
      gap: 2rem;
    }
    
    .testimonials__arrow {
      width: 40px;
      height: 40px;
    }
    
    .testimonials__controls {
      gap: var(--spacing-lg);
      margin-top: var(--spacing-2xl);
    }
  }
{% endstylesheet %}

{% javascript %}
  class TestimonialsCarousel {
    constructor(container) {
      this.container = container;
      this.track = container.querySelector('[data-testimonials-track]');
      this.slides = container.querySelectorAll('[data-testimonial-slide]');
      this.prevButton = container.querySelector('[data-carousel-prev]');
      this.nextButton = container.querySelector('[data-carousel-next]');
      this.dotsContainer = container.querySelector('[data-carousel-dots]');
      
      this.autoplay = container.dataset.autoplay === 'true';
      this.delay = parseInt(container.dataset.delay) || 5000;
      
      this.currentIndex = 0;
      this.slidesPerView = this.getSlidesPerView();
      this.totalSlides = this.slides.length;
      this.maxIndex = Math.max(0, this.totalSlides - this.slidesPerView);
      
      if (this.totalSlides > this.slidesPerView) {
        this.init();
      }
    }
    
    init() {
      this.createDots();
      this.addEventListeners();
      this.updateCarousel();
      
      if (this.autoplay) {
        this.startAutoplay();
      }
      
      window.addEventListener('resize', this.handleResize.bind(this));
    }
    
    getSlidesPerView() {
      const width = window.innerWidth;
      if (width < 768) return 1;
      if (width < 1024) return 2;
      
      const columns = parseInt(getComputedStyle(this.container).getPropertyValue('--columns-desktop')) || 3;
      return columns;
    }
    
    createDots() {
      if (!this.dotsContainer) return;
      
      this.dotsContainer.innerHTML = '';
      const dotsCount = this.maxIndex + 1;
      
      for (let i = 0; i < dotsCount; i++) {
        const dot = document.createElement('button');
        dot.className = 'testimonials__dot';
        dot.setAttribute('data-carousel-dot', i);
        dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
        
        if (i === 0) {
          dot.classList.add('active');
        }
        
        dot.addEventListener('click', () => this.goToSlide(i));
        this.dotsContainer.appendChild(dot);
      }
    }
    
    addEventListeners() {
      if (this.prevButton) {
        this.prevButton.addEventListener('click', () => this.prev());
      }
      
      if (this.nextButton) {
        this.nextButton.addEventListener('click', () => this.next());
      }
      
      this.container.addEventListener('mouseenter', () => this.stopAutoplay());
      this.container.addEventListener('mouseleave', () => {
        if (this.autoplay) this.startAutoplay();
      });
    }
    
    updateCarousel() {
      const slideWidth = this.slides[0].offsetWidth;
      const gap = parseInt(getComputedStyle(this.track).gap) || 0;
      const offset = -(this.currentIndex * (slideWidth + gap));
      
      this.track.style.transform = `translateX(${offset}px)`;
      
      this.updateDots();
      this.updateButtons();
    }
    
    updateDots() {
      const dots = this.dotsContainer?.querySelectorAll('[data-carousel-dot]');
      if (!dots) return;
      
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === this.currentIndex);
      });
    }
    
    updateButtons() {
      if (this.prevButton) {
        this.prevButton.disabled = this.currentIndex === 0;
      }
      
      if (this.nextButton) {
        this.nextButton.disabled = this.currentIndex >= this.maxIndex;
      }
    }
    
    goToSlide(index) {
      this.currentIndex = Math.max(0, Math.min(index, this.maxIndex));
      this.updateCarousel();
      this.stopAutoplay();
      if (this.autoplay) this.startAutoplay();
    }
    
    next() {
      if (this.currentIndex < this.maxIndex) {
        this.currentIndex++;
        this.updateCarousel();
      }
    }
    
    prev() {
      if (this.currentIndex > 0) {
        this.currentIndex--;
        this.updateCarousel();
      }
    }
    
    startAutoplay() {
      this.stopAutoplay();
      this.autoplayInterval = setInterval(() => {
        if (this.currentIndex >= this.maxIndex) {
          this.currentIndex = 0;
        } else {
          this.currentIndex++;
        }
        this.updateCarousel();
      }, this.delay);
    }
    
    stopAutoplay() {
      if (this.autoplayInterval) {
        clearInterval(this.autoplayInterval);
        this.autoplayInterval = null;
      }
    }
    
    handleResize() {
      const newSlidesPerView = this.getSlidesPerView();
      if (newSlidesPerView !== this.slidesPerView) {
        this.slidesPerView = newSlidesPerView;
        this.maxIndex = Math.max(0, this.totalSlides - this.slidesPerView);
        this.currentIndex = Math.min(this.currentIndex, this.maxIndex);
        this.createDots();
        this.updateCarousel();
      }
    }
    
    destroy() {
      this.stopAutoplay();
      window.removeEventListener('resize', this.handleResize);
    }
  }
  
  document.addEventListener('DOMContentLoaded', function() {
    const carousels = document.querySelectorAll('[data-testimonials-carousel]');
    carousels.forEach(carousel => {
      new TestimonialsCarousel(carousel);
    });
  });
  
  document.addEventListener('shopify:section:load', function() {
    const carousels = document.querySelectorAll('[data-testimonials-carousel]');
    carousels.forEach(carousel => {
      new TestimonialsCarousel(carousel);
    });
  });
{% endjavascript %}

